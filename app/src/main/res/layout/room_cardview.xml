<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <!-- android:elevation="100dp"
        card_view:cardCornerRadius="8dp"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/cardview_default_radius"
        android:paddingBottom="10dp"
        android:layout_marginBottom="5dp"-->


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:id="@+id/cardview"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="161dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/room_image"
                android:layout_width="189dp"
                android:layout_height="170dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:contentDescription="First Image"
                android:scaleType="center" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/price_sign_label"
                    android:layout_width="49dp"
                    android:layout_height="38dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="33dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="-9dp"
                    android:layout_marginRight="-169dp"
                    android:layout_marginBottom="130dp"
                    android:layout_toLeftOf="@+id/price_label"
                    android:layout_toEndOf="@+id/price_label"
                    android:text="TK"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/browser_actions_text_color"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/price_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="3dp"
                    android:hint="120000"
                    android:textColor="@color/browser_actions_text_color"
                    android:textColorHint="@color/browser_actions_text_color"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/location_label"
                    android:layout_width="75dp"
                    android:layout_height="43dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="95dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="32dp"
                    android:hint="Not Set"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/browser_actions_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/num_beds_label"
                    android:layout_width="19dp"
                    android:layout_height="36dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="115dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="29dp"
                    android:layout_marginBottom="102dp"
                    android:hint="0"
                    android:textColor="#FF4081"
                    android:textColorHint="#FF4081"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/beds"
                    android:layout_width="81dp"
                    android:layout_height="26dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="79dp"
                    android:layout_marginBottom="116dp"
                    android:text="Bedroom"
                    android:textColor="@color/browser_actions_text_color"
                    android:textSize="17dp" />


                <TextView
                    android:id="@+id/toilet"
                    android:layout_width="88dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="59dp"
                    android:layout_marginEnd="72dp"
                    android:layout_marginBottom="81dp"
                    android:text="Bathroom"
                    android:textColor="@color/browser_actions_text_color"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/details_num_baths_label"
                    android:layout_width="20dp"
                    android:layout_height="31dp"
                    android:layout_alignLeft="@+id/incl_excl_label"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="114dp"
                    android:layout_marginLeft="97dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="29dp"
                    android:layout_marginBottom="79dp"
                    android:hint="0"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FF4081"
                    android:textColorHint="#FF4081"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/propertyType_label"
                    android:layout_width="95dp"
                    android:layout_height="31dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="122dp"
                    android:layout_marginEnd="63dp"
                    android:layout_marginRight="47dp"
                    android:layout_marginBottom="17dp"
                    android:text="property"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/browser_actions_text_color"
                    android:textColorHint="@color/browser_actions_text_color"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="31dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="91dp"
                    android:layout_marginEnd="85dp"
                    android:layout_marginBottom="48dp"
                    android:text="Location"
                    android:textColor="@color/browser_actions_text_color"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/incl_excl_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="17dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="138dp"
                    android:layout_marginEnd="175dp"
                    android:layout_marginBottom="9dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/browser_actions_text_color"
                    android:textColorHint="@color/browser_actions_text_color"
                    android:textSize="17sp" />

            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
